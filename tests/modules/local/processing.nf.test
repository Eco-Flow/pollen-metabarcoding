nextflow_process {

    name "Test Process PROCESSING"
    script "modules/local/processing.nf"
    process "PROCESSING"

    test("Should run without failures") {

        when {
            params {
                clean = false
            }
            process {
                """
                input[0] = Channel.of( [ [ "id":"ERR2537816", "single_end": false ], file("${projectDir}/data/processing-input/ERR2537816.tsv") ] ) 
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
            with(process.out) {
              assert fasta.size() == 1
              assert fasta[0].size() == 2
              assert fasta[0][0].size() == 2
              assert path(fasta[0].get(1)).md5 == '58f98a56c0746e50cf57e944d80c3dc0'
            }

        }

    }

}
